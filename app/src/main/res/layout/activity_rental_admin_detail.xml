<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnKonfirmasiRental"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#00FFFFFF"
                android:layout_marginVertical="8dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/detailStatusRental"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finished"
                    android:layout_marginStart="16dp"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/purple_700"/>

                <TextView
                    android:id="@+id/detailCreated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000-00-00 00:00:00"
                    android:textSize="15sp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customers"
                android:background="#EDEDED"
                android:drawableStart="@drawable/pelanggan"
                android:drawableTint="@color/purple_500"
                android:drawablePadding="16dp"
                android:paddingStart="24dp"
                android:paddingVertical="8dp"
                android:textSize="18sp"
                style="@style/TextAppearance.AppCompat.Title"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_marginTop="1dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="#EDEDED">

                <ImageView
                    android:id="@+id/detailFotoPelanggan"
                    android:layout_width="64dp"
                    android:layout_height="56dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/image"
                    android:background="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="90dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detailPelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer's name"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/detailNoHpPelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile phone number"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Car"
                android:layout_marginTop="16dp"
                android:background="#EDEDED"
                android:drawableStart="@drawable/mobil"
                android:drawableTint="@color/purple_500"
                android:drawablePadding="16dp"
                android:paddingStart="24dp"
                android:paddingVertical="8dp"
                android:textSize="18sp"
                style="@style/TextAppearance.AppCompat.Title"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_marginTop="1dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="#EDEDED">

                <ImageView
                    android:id="@+id/detailFotoMobil"
                    android:layout_width="64dp"
                    android:layout_height="56dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/image"
                    android:background="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="90dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detailMobil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Car Name"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/detailCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"/>

                    <TextView
                        android:id="@+id/detailHarga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvSopir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Driver"
                android:layout_marginTop="16dp"
                android:background="#EDEDED"
                android:drawableStart="@drawable/sopir"
                android:drawableTint="@color/purple_500"
                android:drawablePadding="16dp"
                android:paddingStart="24dp"
                android:paddingVertical="8dp"
                android:textSize="18sp"
                style="@style/TextAppearance.AppCompat.Title"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSopir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_marginTop="1dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="#EDEDED">

                <ImageView
                    android:id="@+id/detailFotoSopir"
                    android:layout_width="64dp"
                    android:layout_height="56dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/user"
                    android:background="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="90dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detailSopir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Driver's Name"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/detailHpSopir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone number"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rental"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/rental"
                android:drawableTint="@color/purple_500"
                android:drawablePadding="16dp"
                android:paddingStart="24dp"
                android:paddingVertical="8dp"
                android:textSize="18sp"
                style="@style/TextAppearance.AppCompat.Title"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/underline"
                android:layout_marginHorizontal="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#00FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Rental Date"/>

                <TextView
                    android:id="@+id/detailTgl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rental Date"
                    android:textSize="15sp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#00FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Start Date"/>

                <TextView
                    android:id="@+id/detailTglMulai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    android:textSize="15sp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#00FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Finished"/>

                <TextView
                    android:id="@+id/detailTglSelesai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of completion"
                    android:textSize="15sp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#00FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Day"/>

                <TextView
                    android:id="@+id/detailHari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 day"
                    android:textSize="15sp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cdHrgaSopir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#00FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Driver Fee"/>

                <TextView
                    android:id="@+id/detailHargaSopir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KSH.00"
                    android:textSize="15sp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#00FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Rental Prices"/>

                <TextView
                    android:id="@+id/detailHargaRental"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KSH.00"
                    android:textSize="15sp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#00FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Total payment"/>

                <TextView
                    android:id="@+id/detailTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KSH.00"
                    android:textSize="15sp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/bayar"
                android:drawableTint="@color/purple_500"
                android:drawablePadding="16dp"
                android:paddingStart="24dp"
                android:paddingVertical="8dp"
                android:textSize="18sp"
                style="@style/TextAppearance.AppCompat.Title"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/underline"
                android:layout_marginHorizontal="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#00FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Payment status"/>

                <TextView
                    android:id="@+id/detailStatusBayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment status"
                    android:textSize="15sp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/btnDetailPembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Payment Details.."
                android:layout_marginEnd="16dp"
                android:textSize="15sp"
                android:layout_marginTop="8dp"
                android:textStyle="italic"
                android:layout_gravity="end"
                android:textColor="#0D27B6"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btnKonfirmasiRental"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="Confirm the Car is Running"
        android:layout_marginHorizontal="12dp"
        android:backgroundTint="@color/teal_200"
        android:textAllCaps="false"
        android:layout_marginBottom="4dp"
        android:drawableLeft="@drawable/right"
        android:drawableTint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/btnBatalkanRental"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnKonfirmasiPengembalian"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="Car Return Confirmation"
        android:layout_marginHorizontal="12dp"
        android:backgroundTint="#EC6666"
        android:textAllCaps="false"
        android:visibility="gone"
        android:layout_marginBottom="4dp"
        android:drawableLeft="@drawable/left"
        android:drawableTint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/btnBatalkanRental"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnBatalkanRental"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="Cancel Booking"
        android:layout_marginHorizontal="12dp"
        android:backgroundTint="#EC6666"
        android:textAllCaps="false"
        android:layout_marginBottom="4dp"
        android:drawableLeft="@drawable/left"
        android:drawableTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>